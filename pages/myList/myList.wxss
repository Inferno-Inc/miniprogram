/* pages/myLsit/myList.wxss */
.post_container {
  display: flex;
  flex-direction: row;
  height: 200rpx;
  background-color: #fff;
}
.footer{
  background-color: #fff;
}
.post_type{
  display: flex;
  width: 100%;
}
.tags{ 
  size:medium;
  margin-left: 10rpx;
}
.header{
  display: flex;
}
.post_image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15px;
  margin-top: 15px;
  border-radius: 40rpx;
}
.sub_header{
  display: flex;
  flex-direction: column;
}
.nickname{
  padding: 20rpx;
  font-size: 35rpx;
}
.sub_container{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.postingtime{
  font-size: 25rpx;
}
.post_content {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.title {
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: #000;
  font-size: 30rpx;
  width: 100%;
}
.post_body {
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: #999;
  font-size: 30rpx;
  width: 100%;
}
.date {
  text-align: right;
  margin-right: 30rpx;
  color: #999;
  font-size: 25rpx;
  padding-top: 15rpx;
}
.state {
  text-align: right;
  margin-right: 300rpx;
  color: green;
  font-size: 35rpx;
  padding-top: 15rpx;
}
.disabled_state {
  text-align: right;
  margin-right: 300rpx;
  color: red;
  font-size: 35rpx;
  padding-top: 15rpx;
}
.item{   
  position: absolute;
  width: 100%;
  height: 150rpx;
  left: 0;
  z-index: 100;
  background-color: #fff;
} 
.buttons{
  position: absolute;
  width: 100%;
  height: 200rpx;
  left: 0;
  z-index: 0;
}
.edt{
  position: absolute;
  width: 200rpx;
  height: 100%;
  right: 150rpx;
  background-color: rgb(200, 199, 205);
  color: #fff;
  text-align: center;
  line-height: 150rpx;
}
.del{   
  position: absolute;
  width: 150rpx;
  height: 100%;
  right: 0;
  background-color: rgb(255, 58, 50);
  color: #fff;
  text-align: center;
  line-height: 150rpx;
 } 
