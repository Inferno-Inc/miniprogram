<!--info.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{headshot}}" mode="cover"></image>
      <text class="userinfo-nickname">{{nickname}}</text>
    </block>
  </view>
  
  <view>
  <van-cell-group>
  <van-field
    value="{{ location }}"
    clearable
    label="所在地点"
    placeholder="{{location}}"
    border="{{ false }}"
    bind:change="onTypeLocation"
  />
  <van-field
    value="{{ gender }}"
    clearable
    label="用户性别"
    placeholder="{{gender}}"
    border="{{ false }}"
    bind:change="onTypeGender"
  />
  <van-field
    value="{{ email }}"
    clearable
    label="用户邮箱"
    placeholder="{{email}}"
    border="{{ false }}"
    bind:change="onTypeEmail"
  />
  <van-field
    value="{{ phone }}"
    clearable
    label="联系电话"
    placeholder="{{phone}}"
    border="{{ false }}"
    bind:change="onTypePhone"
  />
  <van-field
    value="{{ introduction }}"
    clearable
    label="个人简介"
    placeholder="{{introduction}}"
    border="{{ false }}"
    bind:change="onTypeIntroduction"
  />
  <block wx:for="{{tags}}">
      <van-field
        value="{{ item }}"
        clearable
        label="修改标签"          
        placeholder="{{item}}"
        border="{{ false }}"
        name= "{{index}}"
        data-id="{{index}}"
        bind:change="onTypeTag"
      />
      <view class="delBtn" >
        <van-button round size="small" type="info" data-id="{{index}}" bind:click="onDelTag">删除这个标签</van-button>
      </view>
  </block>
  <van-field
        value=" "
        clearable
        label="添加标签"
        placeholder="请输入新标签"
        border="{{ false }}"
        name= "{{next}}"
        data-id="{{next}}"
        bind:change="onTypeAdd"
      />
  <view class="delBtn" >
        <van-button round size="small" type="info" data-id="{{index}}" bind:click="onAddTag">添加这个标签</van-button>
      </view>
  <!-- <van-field
    value="{{ password }}"
    clearable
    label="修改密码"
    placeholder="{{password}}"
    border="{{ false }}"
    bind:change="onTypePassword"
  /> -->
  
  </van-cell-group>
  </view>

  <view class="saveinfo">
  <van-button round type="danger" bind:click="onClick">点击保存</van-button>
  </view>
  
  
  <view class="usermotto">
    <van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="home-o">标签</van-tabbar-item>
  <van-tabbar-item icon="search" dot>标签</van-tabbar-item>
  <van-tabbar-item icon="friends-o" info="5">标签</van-tabbar-item>
  <van-tabbar-item icon="setting-o" info="20">标签</van-tabbar-item>
</van-tabbar>
  </view>
</view>
