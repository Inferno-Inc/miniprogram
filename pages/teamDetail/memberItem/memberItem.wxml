<!--pages/teamDetail/memberItem/memberItem.wxml-->

<template name="memberItem">
  <view class="replyContainer">
    <view class="content_container" catchtap='onDetailTap' data-id="{{id}}">
      <view class='avatarBox'> 
        <image class="avatar" src="{{headshot}}" mode="aspectFill"></image>
      </view>
      <view class="bodyContainer">
        <view class="header">{{nickname}}
          <view class="delBtn">
            <van-button size="small" bindtap='onDelMember' data-id='{{username}}'>删除成员</van-button>
          </view>
        </view>
        <text class="username">简介：{{introduction}}</text>
      </view>
      
        
      

    </view>
  </view>
</template>